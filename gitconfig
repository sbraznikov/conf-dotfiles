[user]
	name = Sergej Braznikov
	email = sbraznikov@me.com

[color]
    interactive = auto
    ui = auto
    diff = auto
    branch = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    undo=reset --hard
    new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
    stat = status -s
    st = status -s
    br = branch
    di = diff
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    dump = cat-file -p

[branch]
    autosetupmerge = true
    excludesfile = ~/.gitignore
[core]
	excludesfile = /Users/sbraznikov/.gitignore_global
	safecrlf = true
[credential]
	helper = osxkeychain
